# Copy this file to “.env” and fill in your own values (no comments—the script has all the explanations).
# DO NOT commit your real token to Git; keep .env out of version control.

CONTAINER_NAME="plex"
PLEX_CHANNEL="plexpass"      # "public" or "plexpass"
PLEX_TOKEN="YOUR_PLEX_TOKEN_HERE"  # required if you want beta updates
PLEX_HOST="localhost"
PLEX_PORT="32400"
LOG_FILE="/home/youruser/logs/plex_update_check.log"

SLEEP_INTERVAL=300           # in seconds; how long to wait between stream checks
MAX_ATTEMPTS=12              # how many times to poll before giving up and forcing restart
